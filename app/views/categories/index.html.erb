<div class="filter">
  <label>Filter By Category:</label>
  <%= text_field :category, :filter_name %>
</div>


<div class="categories">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col s12 m4 l4">
        <div id="<%= category.name %>">
          <div class="card category-card">
            <div class="card-image waves-effect waves-block waves-light">
              <%= link_to category_items_path(category_url: category.url) do %>
                <%= image_tag "vegetables.jpg" %>
              <% end %>
            </div>
            <div class="card-content">
              <!-- <%= category.name %> -->
              <%= link_to category.name, category_items_path(category_url: category.url) %>
            </div> <!--card-content-->
          </div> <!--card-->
        </div> <!-- cat name grid -->
      </div> <!--col12-->
    <% end %>
  </div>
</div>
