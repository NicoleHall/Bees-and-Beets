<h2>Create Items</h2>

<%= form_for [:admin, @item] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true %>

  <%= f.label :image_path %>
  <%= f.text_field :image_path %>

  <%= f.label :price %>
  <%= f.text_field :price, required: true %>

  <%= f.label :category %>
  <%= f.fields_for :category, @item.category do |category_form| %>
    <%= f.select "category_id", options_from_collection_for_select(Category.all, "id", "name"), required: true, prompt: nil, multiple: false %>
  <% end %>

  <%= f.label :user %>
  <%= f.fields_for :user, @item.user do |user_form| %>
    <%= f.select "user_id", options_from_collection_for_select(User.all.artists, "id", "first_name"), required: true, prompt: nil, multiple: false %>
  <% end %>
  <br>

  <%= f.label :description %>
  <%= f.text_area :description, required: true %>

  <br>
  <%= f.submit "Create Item", :class=> "waves-effect waves-light btn green accent-4" %>
<% end %>
