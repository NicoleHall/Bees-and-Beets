<div class="admin_dashboard">
  <h2>Admin Dashboard</h2>

  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-content">
          <% if current_artist? %>
          <% if current_user.file_upload %>
          <%= image_tag current_user.file_upload.url(:medium) %>
          <% end %>
          <% end %>
          <h3> User Name</h3>
          <table class="larger-text">
            <tr>
              <td>
                <strong>Username:</strong>
              </td>
              <td>
                username
              </td>
            </tr>
            <tr>
              <td>
                <strong>Email: </strong>
              </td>
              <td>
                email-address
              </td>
            </tr>
            <tr>
              <td>
                <strong>Address: </strong>
              </td>
              <td>
                123 Maple Dr.
                <br>
                Denver, CO 80210
              </td>
            </tr>
          </table>
        </div>
        <div class="card-action">
          <%= link_to "Edit Info", "#", class: "btn waves-effect waves-light" %>
        </div>
      </div>
    </div>

    <div class="col s12 m6">
      <div class="card">
        <div class="card-action user_action_links">
          <div class="action_box"><%= link_to "Create Item", "#" %></div>
          <div class="action_box"><%= link_to "Create Shop", "#" %></div>
          <div class="action_box"><%= link_to "Add New Item", "#" %></div>
          <div class="action_box"><%= link_to "View Items", "#" %></div>
          <div class="action_box"><%= link_to "View Orders", "#" %></div>

        </div>
      </div>
    </div>

  </div>

</div>
